@model Mission06_Palmer.Models.Movie

@{
    ViewData["Title"] = "Add a Movie"; // Set the page title
}

<h2>Add a Movie</h2>

<form asp-action="AddMovie" method="post"> <!-- Form submits to AddMovie action -->
    
    <!-- Title input field -->
    <div class="form-group">
        <label>Title:</label>
        <input asp-for="Title" class="form-control" required />
    </div>

    <!-- Category input field -->
    <div class="form-group">
        <label>Category:</label>
        <input asp-for="Category" class="form-control" required />
    </div>

    <!-- Director input field -->
    <div class="form-group">
        <label>Director:</label>
        <input asp-for="Director" class="form-control" required />
    </div>

    <!-- Year input field -->
    <div class="form-group">
        <label>Year:</label>
        <input asp-for="Year" class="form-control" type="number" required />
    </div>

    <!-- Rating dropdown selection -->
    <div class="form-group">
        <label>Rating:</label>
        <select asp-for="Rating" class="form-control" required>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
    </div>

    <!-- Edited checkbox -->
    <div class="form-group">
        <label for="Edited">Edited</label>
        <input type="checkbox" id="Edited" name="Edited" value="true"/>
        <span id="Edited-error" class="text-danger"></span>
    </div>
    
    <!-- Lent To input field -->
    <div class="form-group">
        <label>Lent To:</label>
        <input asp-for="LentTo" class="form-control" />
    </div>

    <!-- Notes input field with a maximum length of 25 characters -->
    <div class="form-group">
        <label>Notes (Max 25 characters):</label>
        <input asp-for="Notes" class="form-control" maxlength="25" />
    </div>

    <!-- Submit button -->
    <button type="submit" class="btn btn-primary">Add Movie</button>
</form>
