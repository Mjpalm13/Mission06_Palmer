@model Mission06_Palmer.Models.Movie

<h2>Add a Movie</h2>

<form asp-action="AddMovie" method="post">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Category"></label>
        <input asp-for="Category" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Director"></label>
        <input asp-for="Director" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Year"></label>
        <input asp-for="Year" class="form-control" type="number" min="1888" max="2100" required />
    </div>

    <div class="form-group">
        <label asp-for="Rating"></label>
        <select asp-for="Rating" class="form-control">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Edited">Edited</label>
        <select asp-for="Edited" class="form-control">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="LentTo">Lent To</label>
        <input asp-for="LentTo" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Notes"></label>
        <input asp-for="Notes" class="form-control" maxlength="25" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>